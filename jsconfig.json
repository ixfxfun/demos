{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "target": "ES2023",
    "jsx": "react",
    "allowImportingTsExtensions": false,
    "checkJs": true,
    "strictNullChecks": true,
    "allowJs": true,
    "strictFunctionTypes": true,
    "baseUrl": "./",
    "paths": {
      "@ixfx": [
        "./ixfx/index.js"
      ],
      "@ixfx/*": [
        "./ixfx/*"
      ]
    },
    "lib": [
      "DOM",
      "ESNext",
      "DOM.AsyncIterable",
      "DOM.Iterable"
    ]
  },
  "include": [
    "./**/*.d.ts",
    "./**/*.js"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}